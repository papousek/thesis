% Normal title page.
\defbeamertemplate*{title page}{simple}[1][]
{
	\vfill
	\begin{centering}
		\begin{beamercolorbox}[center, rounded=true]{title}
			\usebeamerfont{title}\inserttitle\par%
			\ifx\insertsubtitle\@empty%
			\else%
        			\vskip0.25em%
			        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
                    \vskip0.25em%
			\fi%
		\end{beamercolorbox}%

        \vskip1em

		{\usebeamercolor[fg]{titlegraphic}\includegraphics[width=5.0cm]{logo-large.png}\par}

		\begin{beamercolorbox}[sep=8pt,center,#1]{author}
			\usebeamerfont{author}\insertauthor
		\end{beamercolorbox}

	\end{centering}
	\vfill
}

